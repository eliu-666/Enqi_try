<TimeStepUpdates>
<MotionUpdateSphere>
      <cfg>
          <Prototype>spheres_cold</Prototype>
          <Parameter>
              <ExecuteEvery>1</ExecuteEvery>
          </Parameter>
      </cfg>
     <cfg>
          <Prototype>spheres_hot</Prototype>
          <Parameter>
              <ExecuteEvery>1</ExecuteEvery>
          </Parameter>
      </cfg>
</MotionUpdateSphere>

	<UniformThermoUpdate>
		<cfg>
			<Prototype>spheres_cold</Prototype>
			<Parameter>
				<ExecuteEvery>1</ExecuteEvery>
			</Parameter>
		</cfg>		
		<cfg>
			<Prototype>spheres_hot</Prototype>
			<Parameter>
				<ExecuteEvery>1</ExecuteEvery>			
			</Parameter>
		</cfg>
	</UniformThermoUpdate>


<ForcedRotationAroundAxisBoundary>
	    <cfg>
		<Prototype>walls</Prototype>
		<Parameter>
		    <unit>rps</unit>
		    <axisDirection>0.0 -1.0 0.0</axisDirection>
		    <centreOfRotation>0.0 0.0 0.0 </centreOfRotation>
		    <cyclic>1000.0</cyclic>
		    <forcedConditions>
		        <cfg time="0">
		            <rotationSpeed>2.0</rotationSpeed>
		        </cfg>
		    </forcedConditions>
		    <ExecuteEvery>1</ExecuteEvery>
		</Parameter>
	    </cfg>
</ForcedRotationAroundAxisBoundary>	
</TimeStepUpdates>
